        <div class="container">
          <div class="order">
            <h1>
                Fill Order Details
            </h1>
          </div>

          <div class="main">
             <div class="content">
                <form action="/confirm" method="post">
                <input type="hidden" name="shop" value="{{shop}}">
                <input type="hidden" name="item" value="{{item}}">
                <input type="hidden" name="user" value="{{user}}">
                    <div id="name">
                         <h2 class="name">Name</h2>
                         <input type="text" class="fname" id="fname" name="fname" value="{{fname}}"><br>
                         <label for="fname" class="fnamelb">First Name</label>
                         <input type="text" class="lname" id="lname" name="lname" value="{{lname}}">
                         <label for="lname" class="lnamelb">Last Name</label>
                     </div>
         
                     <h2 class="name">Phone</h2>
                     <input type="text" class="code" id="phone" name="vcode" size="2" value="+91">
                     <label for="phone" class="area-code">Area Code</label>
                     <input type="text" class="number" id="num" name="ph" size="10" value="{{ph}}">
                     <label for="num" class="Phone-number">Phone Number</label>
         
                     <label for="add"><h2 class="name">Address</h2></label>
                     <textarea name="address" class="address" id="add" cols="60" rows="2">{{address}}</textarea>
         
                     <div class="quantity_price">
                         <div>
                             <label for="quantity"><h2 class="name">Quantity</h2></label>
                             <input type="number" class="quantity" id="quantity" name="quantity" min="1" max="{{quantity}}" step="1" value="1">
                         </div>
         
                         <div>
                             <label for="price"><h2 class="name cname">Price</h2></label>
                             <input type="text" class="price" id="price" name="price" value="{{price}}" readonly>
                         </div>
                     </div>
         
                     <li>
                         <input id="check" type="checkbox" value="test" required>
                         <label for="check"><h2 class="check-text">Confirm</h2></label>
                     </li>
         
                     <input type="submit" value="Place Order">
                 </form>
             </div>

             <div class="image">
                 <img src="image/{{item}}.jpg" alt="">
                 <p>{{item}}</p>
             </div>

          </div>
        </div>
    
