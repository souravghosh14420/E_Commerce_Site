  <script>

        let val=document.getElementById("price").value;

        const update=(val)=>{
            let q=document.getElementById("quantity").value;
            let p=document.getElementById("price");
            let x=q*val;
            p.value=`${x}`;
        };

        setInterval(update,100,val);

    </script>

